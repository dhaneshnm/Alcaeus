{
  "env": {
    "test": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "targets": {
              "node": "current"
            }
          }
        ],
        "@babel/preset-typescript"
      ]
    },
    "modules": {
      "presets": [
        "@babel/preset-typescript"
      ],
      "plugins": [
        [
          "babel-plugin-add-import-extension",
          {
            "extension": "mjs"
          }
        ]
      ]
    }
  },
  "plugins": [
    "@babel/plugin-proposal-optional-chaining",
    "@babel/proposal-class-properties",
    [
      "@babel/plugin-proposal-decorators",
      {
        "decoratorsBeforeExport": true
      }
    ]
  ]
}
